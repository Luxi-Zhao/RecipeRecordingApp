<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:contentPadding="10dp"
    app:cardCornerRadius="4sp"
    android:layout_margin="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:id="@+id/procedure_card_view"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/procedure_edit_ok">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/procedure_edit_text"
                android:textSize="20sp"
                android:backgroundTint="@color/colorAccent"
                android:inputType="text"
                android:hint="enter text"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/procedure_text"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text=""/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/procedure_image"
            android:layout_centerInParent="true"
            android:contentDescription="procedure image"
           />

        <Button
            android:id="@+id/procedure_edit_ok"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ok"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/procedure_edit_delete"
             />

        <Button
            android:id="@+id/procedure_edit_delete"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="del"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>