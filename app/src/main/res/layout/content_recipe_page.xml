<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:overScrollMode="never"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lucyzhao.notetaking.RecipePageActivity"
    tools:showIn="@layout/activity_recipe_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/change_pic_fragment_container">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/single_page_foodpicture"
                android:clickable="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9fd5cdcd"
                android:layout_centerInParent="true"
                android:id="@+id/title_rl">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/single_page_title_tv"
                        android:text="sdf"
                        android:textSize="50sp"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/single_page_title"
                    android:text=""
                    android:hint=""
                    android:textSize="50sp"
                    android:layout_marginStart="30dp"
                    android:maxLines="1"
                    android:layout_toStartOf="@+id/title_ok_button"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/title_ok_button"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="ok" />

            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/ingredients_linear_layout"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INGREDIENTS"
                />


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/ingredients_recyclerView"
                android:layout_height="wrap_content"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ToggleButton
                    android:id="@+id/add_ingredient_button"
                    style="@android:style/Widget.Holo.Button.Toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/colorAccent"
                    android:textOff="ADD"
                    android:textOn="CANCEL" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/add_ingredient_button"
                    android:id="@+id/add_ingredient_container"
                    />
            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients_linear_layout"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROCEDURE"
                android:paddingBottom="5dp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/procedure_recyclerView"
                android:layout_height="wrap_content"
                />

            <ToggleButton
                android:id="@+id/add_procedure_button"
                style="@android:style/Widget.Holo.Button.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textOff="ADD DESCRIPTION"
                android:backgroundTint="@color/colorAccent"
                android:textOn="CANCEL" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/add_procedure_container"
                android:layout_height="100dp"/>


        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>


